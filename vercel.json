{
  "version": 2,
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build" },
    { "src": "backend/app.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/app.py" },
    { "src": "/(.*)", "dest": "/frontend/index.html" }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/app.py" }
  ]
}